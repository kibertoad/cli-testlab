{
  "name": "cli-testlab",
  "version": "5.0.0",
  "description": "Test framework for CLI utilities",
  "author": {
    "name": "Igor Savin",
    "web": "https://github.com/kibertoad"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "del-cli dist/ && tsc && copyfiles test/util/apps/*.js dist",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ci": "npm run lint && npm run test:coverage",
    "lint": "eslint \"lib/**/*.ts\" \"test/**/*.ts\" \"test/**/*.js\" index.ts",
    "prettier": "prettier --write \"{lib,test}/**/*.{js,ts}\" index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kibertoad/cli-testlab.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "rimraf": "^6.1.2",
    "globule": "^1.3.4"
  },
  "devDependencies": {
    "@types/globule": "^1.1.10",
    "@types/node": "^20.19.30",
    "@vitest/coverage-v8": "^4.0.17",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "commander": "^11.1.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist/lib/*",
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "keywords": [
    "cli",
    "test",
    "tests",
    "testing",
    "framework",
    "commandline",
    "terminal"
  ]
}
