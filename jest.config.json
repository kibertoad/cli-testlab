{
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "testMatch": [
    "<rootDir>/test/**/*.(spec|test).ts|tsx"
  ],
  "transform": {
    "^.+\\.ts$": ["ts-jest", { "diagnostics": false }]
  },
  "testEnvironment": "node",
  "reporters": [ "default" ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/coverage/"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 92,
      "branches": 62,
      "functions": 97,
      "lines": 92
    }
  }
}
